<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="@dimen/dot_size"
        android:height="@dimen/dot_size"
        android:gravity="top|right">
        <shape android:shape="oval">
            <padding
                android:right="@dimen/dot_padding"
                android:top="@dimen/dot_padding" />
            <solid android:color="@color/text_risk_low" />
        </shape>
    </item>
    <item
        android:gravity="center">
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/text_padding"
                android:left="@dimen/text_padding"
                android:right="@dimen/text_padding"
                android:top="@dimen/text_padding" />
            <corners android:radius="@dimen/text_radius_title" />
            <stroke
                android:width="1dp"
                android:color="@color/text_risk_low" />
        </shape>
    </item>
</layer-list>